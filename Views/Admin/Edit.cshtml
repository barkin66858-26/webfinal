@model FitnessApp.Models.Package

@{
    ViewData["Title"] = "Edit Package";
}

<div class="container" style="padding-top: 3rem; max-width: 600px;">
    <h1>Paket Düzenle</h1>
    
    <form asp-action="Edit" style="background: var(--card-bg); padding: 2rem; border-radius: 10px; border: 1px solid var(--border);">
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group">
            <label asp-for="Name">Paket Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Price">Fiyat (TL)</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Görsel URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group">
             <label asp-for="Features">Özellikler (virgülle ayırın)</label>
             <input asp-for="Features" class="form-control" />
        </div>

        <div style="margin-top: 2rem;">
            <button type="submit" class="btn-primary">Değişiklikleri Kaydet</button>
            <a asp-action="Index" style="margin-left: 1rem; color: var(--text-muted);">İptal</a>
        </div>
    </form>
</div>
