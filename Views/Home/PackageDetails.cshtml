@model FitnessApp.Models.Package

@{
    ViewData["Title"] = Model.Name;
}

<div class="container" style="padding-top: 5rem;">
    <div style="background: var(--card-bg); border-radius: 10px; overflow: hidden; display: flex; flex-wrap: wrap;">
        <div style="flex: 1; min-width: 300px;">
            <img src="@Model.ImageUrl" style="width: 100%; height: 100%; object-fit: cover;" alt="@Model.Name">
        </div>
        <div style="flex: 1; padding: 2rem;">
            <h1 style="color: var(--primary)">@Model.Name</h1>
            <h2 style="margin-bottom: 1rem;">@Model.Price TL <small>/ ay</small></h2>
            <p style="font-size: 1.1rem; margin-bottom: 2rem;">@Model.Description</p>
            
            <h3 style="margin-bottom: 1rem;">Dahil Olan Özellikler:</h3>
            <ul style="list-style: none; padding: 0;">
                @foreach (var feature in Model.Features.Split(','))
                {
                    <li style="padding: 0.5rem 0; border-bottom: 1px solid var(--border);">
                        <span style="color: var(--primary);">✓</span> @feature.Trim()
                    </li>
                }
            </ul>

            <div style="margin-top: 2rem;">
                 <a asp-controller="Payment" asp-action="Subscribe" asp-route-id="@Model.Id" class="btn-primary" style="text-decoration:none;">Hemen Katıl</a>
                 <a asp-action="Packages" style="margin-left: 20px; color: var(--text-muted);">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>
